extends layout
block content
	.navbar.navbar-fixed-top
		.container
			form.navbar-form.pull-left
				input#fbinput.form-control(type='text', placeholder='Search...', autofocus='')
			ul.nav.navbar-nav.hidden-xs
				li.active
					a(href='#seemap') Map
				li
					a(href='#seetime') Timeline
				li
					a(href='#about') About
			.navbar-brand.pull-right.hidden-xs 
				a(href='/') VisiWiki
	section#seemap
	.container
		.grid
			#namebox.aside 
				h1 VisiWiki
				h5 A map of historical people and their influences.
				h5 Search for a well-known person, profession, or period. Or try an example below.
				ul
					li
						a#profession.namenavlink(href='#', data-id='/en/astronomer') Astronomers
					li
						a#movements.namenavlink(href='#', data-id='/en/beat_generation') Beat Generation
					li
						a#placeslived.namenavlink(href='#', data-id='/m/034bs') George Orwell
					li
						a#movements.namenavlink(href='#', data-id='/m/01cd2k') Jazz Age
					li
						a#placeslived.namenavlink(href='#', data-id='/m/058w5') Michelangelo
					li
						a#placeslived.namenavlink(href='#', data-id='/en/plato') Plato
					li
						a#placeslived.namenavlink(href='#', data-id='/en/walt_whitman') Walt Whitman	
			#map.section.hidden-xs
	section#seetime
	#zoomtime.timeline.hidden-xs
	section#about
	#footer.hidden-xs
		h1 VisiWiki
		h2 
			| pre-alpha 
			br 
			| by Mike Kelly
		h3 VisiWiki is a visual guide to influential figures.
		h3 Data courtesy of Wikipedia and freebase.com.
		h3 Works best in Chrome.
	#fulltime.timeline
	script(src='/javascripts/main.js')